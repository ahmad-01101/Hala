<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="Style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>
    <title>@ViewData["Title"] - Hala</title>
</head>
<style>
/* Chrome, Safari, Edge, Opera */
input::-webkit-outer-spin-button,
input::-webkit-inner-spin-button {
    -webkit-appearance: none;
    margin: 0;
}

/* Firefox */
input[type=number] {
    -moz-appearance: textfield;
}
*{
/* font-family: Verdana, sans-serif; */
font-family: Arial, sans-serif;

}
/* navbar section */
.nav-style{
    background-color: #696969;
    border-radius: 40px;
}
.Logo{
    font-weight: 700;
    font-size: 1.9rem; 
    letter-spacing: .2px;
    color: #fff;     
    text-decoration: none;
}
.Logo:hover{
    color: #fff;
}
.link-style{
    font-weight: 100;
    font-size: 1.2rem;
    color: #fff; 
    text-decoration: none;
}
.link-style:hover{
    color: #af4600;
}
.account-btn{
    border: none;
    background-color: transparent;
}
.nav-icons{
    color: #fff;
}
.nav-icons:hover{
    color: #af4600;
}
.Logo-larg{
    font-size: 3rem;
    font-weight: 700;
    text-decoration: none;
    color: #fff;
}

.Logo-larg:hover {
    font-size: 3rem;
    font-weight: 700;
    text-decoration: none;
    color: #000;
}
/* login page */
.Login-Logo{
    font-size: 2rem;
    letter-spacing: .2px;
    color: #fff;
    text-decoration: none;
}
.Login-Logo:hover{
    color: #fff;
}
@@media (min-width:768px) {
    .Login-Logo{
        font-size: 2.3rem;
    }
}
.left-img-login{
    background-image: url('./img/loginImg.png');
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
    height: 100vh;
}
.login-label{
    color: #fff;
}
.login-btn{
    background-color: #a7a7a7;
    font-size: 1.15rem;
    color: #000;
}
.login-btn:hover{
    background-color: #ffffff;
    color: #000;
}
.Rest-Right{
    color: #a7a7a7;
}
.Rest-Link{
    text-decoration: none;
    color: #fff;
}
.Rest-Link:hover{
    text-decoration-line: underline;
    color: #a7a7a7;
}
/* signup section */
.left-img-signup{
    background-image: url('./img/loginImg.png');
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
}
.container-hight{
    height: 100vh;
}
/* admin layout start */

/* side navbar */
.sidebar{
    border-radius: 0px 40px 40px 0px;
    background-color: #696969;
}
.row-hight{
    height: 100vh;
}
.Login-Logo{
    font-weight: 700;
    font-size: 1.5rem;
    letter-spacing: .2px;
    color: #fff;
    text-decoration: none;
}
.Login-Logo:hover{
    color: #fff;
}
.side-link {
    border: 1.5px rgba(0, 0, 0, 0.226) solid;
    border-radius:15px;
}
.side-link a{
    text-decoration: none;
    color: #fff;
    font-size: 1.4rem;
}
.side-link:hover{
    text-decoration: none;
    color: #a2a2a2;
    border-radius:15px;
    background-color: #b0b0b0;
}

.side-link-out {
border-radius: 15px;
background-color: #DC3545;
}

.side-link-out a {
    text-decoration: none;
    color: #ffffff;
    font-size: 1.4rem;
}

.side-link-out:hover {
    text-decoration: none;
    border-radius: 15px;
    background-color: #c70000;
}
.offSetbutton{
    background-color: #713D1B;
    border: 1px rgba(255, 255, 255, 0.419) solid;
    border-radius: 3px;
}
.offSetbutton i{
color: #fff;
}
.logout-button{
    position: absolute;
    bottom: 0px;
    left: 0px;
}
/* left side content */
.AddItem-btn{
    background-color: #713D1B;
    color: #fff;
}
.AddItem-btn:hover{
    background-color: #512A10;
    color: #fff;
}
.AddItem-label{
    color: #000;
}
.AddItem-input{
    background-color: #E2D9D2;
    border: 1px black solid;
}
.Cart-Container{
    border-radius: 20px;   
}

.Search-input {
    background-color: #E2D9D2;
    border: 1px black solid;
}
</style>
<body style="background-color: #E2D9D2;">
    <div class="container-fluid">
        <!-- navbar top for small screen -->
        <nav class="navbar d-md-none nav-style sticky-top mb-3">
            <div class="container-fluid">
                <a asp-controller="Home" asp-action="Home" class="Logo pt-1">
                    Hala
                </a>
                <button class="navbar-toggler border" type="button" data-bs-toggle="offcanvas"
                        data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar">
                    <i class="fas fa-bars" style="color: #ffffff;"></i>
                </button>
                <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar"
                     aria-labelledby="offcanvasNavbarLabel">
                    <div class="offcanvas-header" style="background-color: #696969;">
                        <a asp-controller="Home" asp-action="Home" class="Logo pt-1">
                            Hala
                        </a>
                        <button type="button" class="offSetbutton" style="background-color: #696969;"
                                data-bs-dismiss="offcanvas" aria-label="Close">
                            <i class="fas fa-close"></i>
                        </button>
                    </div>
                    <div class="offcanvas-body" style="background-color: #696969;">
                        <ul class="nav-list navbar-nav mx-auto text-center" style="color: #fff;">
                            <li class="nav-list mb-3">
                                <a asp-controller="Home" asp-action="Home" class="link-style">Home</a>
                            </li>
                            <li class="nav-list mb-3">
                                <a asp-controller="Home" asp-action="Attendance" class="link-style">Attendance</a>
                            </li>
                            <li class="nav-list mb-3">
                                <a asp-controller="Account" asp-action="Logout" class="btn btn-danger btn-sm border border-4 border-danger px-3">
                                    Logout
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
        <div class="row">
            <div class="col-4 col-lg-3 col-xl-2 text-center sidebar d-none d-md-block h-100 position-fixed pt-4">
                <a asp-controller="Home" asp-action="Home" class="Logo-larg">
                    Hala
                </a>
                <hr class="mt-0 text-light">
                <ul class="nav-list mt-4 navbar-nav text-center">
                    <li class="mb-4 side-link  py-2">
                        <a asp-controller="Home" asp-action="Home" class="">Home</a>
                    </li>
                    <li class="mb-4 side-link  py-2">
                        <a asp-controller="Home" asp-action="Attendance" class="">Attendance</a>
                    </li>
                    <li class="mb-4 side-link-out py-2">
                        <a asp-controller="Account" asp-action="Logout" class="">Logout</a>
                    </li>
                </ul>
            </div>
            <div class="col-md-4 col-lg-3 col-xl-2"></div>
            @RenderBody()
        </div>
    </div>
    @if (IsSectionDefined("Scripts"))
    {
        @RenderSection("Scripts", required: true)
    }
</body>
</html>