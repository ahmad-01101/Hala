@model Hala.Models.EmployeesVM
@{
    ViewData["Title"] = "Employee";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col shadow m-md-3 pb-md-5" style="border-radius:10px; background-color: #E2D9D2;">
    @if (Model == null)
    {
        <div class="row mx-1 mx-md-5 justify-content-center py-5">
            <div class="col-12 col-md-8 p-4" style="border-radius:10px; background-color: #c9beb5;">
                <div class="row">
                    <div class="col-12 text-center pt-4 pb-3">
                        <i class="fas fa-regular fa-exclamation-circle " style="color: #ffff00; font-size: 3.7rem;"></i>
                    </div>
                    <div class="col-12 text-center">
                        <h3><strong>No employee found with this Id</strong></h3>
                        <a href="#" class="text-dark text-decoration-none"><strong><i class="fas fa-arrow-left pe-1"></i>Back To Employees</strong></a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row pt-3 m-md-2">
            <div class="col-lg-4">
                <div class="card mb-4 border border-2 border-secondary " style="background-color: #e9e9e9; border-radius:15px;">
                    <div class="card-body text-center">
                        <i class="fa-solid fa-user mt-2 text-secondary" style="font-size: 3.2rem;"></i>
                        <h5 class="my-3">@Model.FirstName</h5>
                        <p class="text-muted mb-1"></p>
                        <p class="text-muted mb-4"></p>
                        <div class="d-flex justify-content-center mb-2">
                            <form method="post" asp-controller="Admin" asp-action="AddEmployee">
                                <input type="hidden" asp-for="NationalId" value="@Model.NationalId">
                                <input type="hidden" asp-for="IsApproved" value="True">
                                <button type="submit" class="btn btn-secondary ms-1">Approve</button>
                            </form>

                            <form method="post" asp-controller="Admin" asp-action="DeleteEmployee">
                                <input type="hidden" asp-for="NationalId" value="@Model.NationalId">
                                <button type="submit" class="btn btn-outline-danger ms-1">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="card mb-4 border border-2 border-secondary" style="background-color: #e9e9e9; border-radius:15px;">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Full Name</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.FirstName @Model.LastName</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Email</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.Email</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Phone</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.PhoneNumber</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Gender</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.Gender</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">National Id</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.NationalId</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
